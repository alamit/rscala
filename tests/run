#!/bin/bash

if [[ "$1" == "--install" ]]
then
  DOINSTALL=TRUE
  shift
fi

if [[ $# -eq 0 ]]
then
  DOALL=TRUE
  SCRIPTS="basics.R callbacks.R defs.R functions.R identifiers.R interpolate.R io.R lengthOneAsVector.R memory.R mistakes.R quiet.R recursion.R rinscala.scala unit-testing.R"
else
  DOALL=FALSE
  SCRIPTS="$*"
fi

if [[ "$DOINSTALL" == TRUE ]]
then
  echo "Testing installation."
  ./scala-info >| scala-info.out 2>&1
fi

# V210=2.10.5
V211=2.11.8

for SCALA_VERSION in $V210 $V211
do
  echo "Running battery for $SCALA_VERSION"
  killall java > /dev/null 2>&1
  export SCALA_HOME=~/local/scala/scala-$SCALA_VERSION
  export SCALA_VERSION
  for script in $SCRIPTS
  do
    echo "  Running $script"
    for SERIALIZE in TRUE FALSE
    do
      EXT=$([[ "$script" = *.* ]] && echo ".${script##*.}" || echo '')
      if [[ "$EXT" == .R ]]
      then
        RSCALA_SERIALIZE=$SERIALIZE R CMD BATCH --no-restore --no-save $script ${script}out-$SERIALIZE-$SCALA_VERSION
      elif [[ "$EXT" == .scala || "$EXT" == "" ]]
      then
        RSCALA_SERIALIZE=$SERIALIZE ./$script >| $script.out-$SERIALIZE-$SCALA_VERSION 2>&1
      fi
    done
  done
done

