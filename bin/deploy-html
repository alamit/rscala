#!/bin/bash

cd $(dirname $(readlink -f "$0"))/..

MAJOR=$(cat build.sbt | grep "version := " | cut -d '"' -f 2)

tmpfile=$(mktemp)
cp html/index.html "$tmpfile"
sed -i s/VERSION/$MAJOR/g html/index.html

rm -rf ~/docs/devel/website-professional/html/software/rscala
cp -rL html ~/docs/devel/website-professional/html/software/rscala

cp "$tmpfile" html/index.html

echo
echo "Now commit and push the 'website-professional' repository."
echo "Then execute 'webserver deploy'."
echo

